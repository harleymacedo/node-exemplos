<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./head') %>
</head>
<body>
    <div class="container">
        <div class="row">
            <h3>Novo Projeto</h3>
        </div>
        <div class="row">             
            <div class="col col-2">
                <form method="POST" action="/projeto/save">
                    <label>Id: <input type="text" class="form-control" name="id"></label>
                    <label>Nome: <input type="text" class="form-control" name="nome"></label>
                    <label>Tempo: <input type="text" class="form-control" name="tempo"></label>
                    <input type="submit" class="form-control" value="Cadastrar">
                </form>
                <% if (typeof mensagem !== 'undefined') { %>
                    <div class="alert alert-success"> <%= mensagem %></div>
                <% } %>
            </div>  
        </div>    
    </div>
    
</body>
</html>